# Cypress Configuration
CYPRESS_BASE_URL=https://opensource-demo.orangehrmlive.com
CYPRESS_API_URL=https://opensource-demo.orangehrmlive.com/web/index.php/api

# Test Credentials
CYPRESS_USERNAME=Admin
CYPRESS_PASSWORD=admin123

# CI/CD Configuration
CYPRESS_RECORD_KEY=your-cypress-cloud-record-key
CYPRESS_RECORD=true
CYPRESS_PARALLEL=true

# Browser Configuration
CYPRESS_BROWSER=chrome
CYPRESS_HEADED=false

# Test Configuration
CYPRESS_VIDEO=true
CYPRESS_SCREENSHOT_ON_RUN_FAILURE=true
CYPRESS_RETRIES=2

# Performance Thresholds
CYPRESS_PAGE_LOAD_THRESHOLD=5000
CYPRESS_LOGIN_THRESHOLD=10000

# Reporting
CYPRESS_REPORTER=mochawesome
CYPRESS_REPORTS_DIR=cypress/reports

# Slack Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#test-automation

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password

# API Keys
API_KEY=your-api-key
API_SECRET=your-api-secret

# Test Data
TEST_USER_ADMIN=Admin
TEST_USER_REGULAR=user123
TEST_PASSWORD=admin123
TEST_INVALID_PASSWORD=wrongpassword

# Environment-specific URLs
STAGING_URL=https://staging.orangehrmlive.com
PRODUCTION_URL=https://production.orangehrmlive.com
DEV_URL=https://dev.orangehrmlive.com

# Performance Testing
LIGHTHOUSE_CI=true
LIGHTHOUSE_THRESHOLDS=performance:0.8,accessibility:0.9,best-practices:0.8,seo:0.8

# Security Testing
SAST_ENABLED=true
DAST_ENABLED=true
DEPENDENCY_SCAN=true

# Monitoring
MONITORING_ENABLED=true
ALERT_EMAIL=alerts@company.com 