{
  "name": "cyprus-automation",
  "version": "1.0.0",
  "description": "Professional Cypress test automation for OrangeHRM",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:open": "cypress open",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:smoke": "cypress run --spec 'cypress/e2e/OrangeHRMLogin.cy.js'",
    "test:regression": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:performance": "cypress run --spec 'cypress/e2e/**/*Performance*.cy.js'",
    "test:security": "cypress run --spec 'cypress/e2e/**/*Security*.cy.js'",
    "test:api": "cypress run --spec 'cypress/e2e/**/*API*.cy.js'",
    "test:api:endpoints": "cypress run --spec 'cypress/e2e/APIEndpoints.cy.js'",
    "test:api:performance": "cypress run --spec 'cypress/e2e/APIPerformance.cy.js'",
    "test:api:main": "cypress run --spec 'cypress/e2e/OrangeHRMAPI.cy.js'",
    "test:visual": "cypress run --spec 'cypress/e2e/VisualRegression.cy.js'",
    "test:accessibility": "cypress run --spec 'cypress/e2e/AccessibilityTesting.cy.js'",
    "test:mobile": "cypress run --spec 'cypress/e2e/MobileTesting.cy.js'",
    "test:parallel": "cypress run --parallel --record",
    "test:ci": "cypress run --record --key $CYPRESS_RECORD_KEY",
    "test:staging": "CYPRESS_BASE_URL=https://staging.orangehrmlive.com cypress run",
    "test:production": "CYPRESS_BASE_URL=https://production.orangehrmlive.com cypress run",
    "test:debug": "cypress run --headed --no-exit",
    "test:retry": "cypress run --retries 3",
    "test:video": "cypress run --video",
    "test:screenshot": "cypress run --screenshot",
    "test:report": "npm run test && npm run generate-report",
    "generate-report": "mochawesome-merge cypress/reports/*.json > cypress/reports/output.json && marge cypress/reports/output.json -f report -o cypress/reports",
    "lint": "eslint cypress/**/*.js",
    "lint:fix": "eslint cypress/**/*.js --fix",
    "format": "prettier --write cypress/**/*.{js,json}",
    "format:check": "prettier --check cypress/**/*.{js,json}",
    "clean": "rm -rf cypress/screenshots cypress/videos cypress/downloads",
    "clean:reports": "rm -rf cypress/reports",
    "clean:all": "rm -rf node_modules cypress/screenshots cypress/videos cypress/downloads cypress/reports",
    "clean:old-archives": "find cypress/archives -type d -mtime +7 -exec rm -rf {} + 2>/dev/null || true",
    "archive:artifacts": "mkdir -p cypress/archives/$(date +%Y%m%d) && mv cypress/screenshots cypress/videos cypress/reports cypress/archives/$(date +%Y%m%d)/ 2>/dev/null || true",
    "test:clean": "npm run clean && npm run test",
    "test:archive": "npm run test && npm run archive:artifacts",
    "install:ci": "npm ci --only=production",
    "install:dev": "npm install",
    "validate": "npm run lint && npm run format:check && npm run test:smoke",
    "precommit": "npm run lint && npm run format:check",
    "prepare": "husky install"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "e2e",
    "orangehrm"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "cypress-multi-reporters": "^1.6.3",
    "mocha-junit-reporter": "^2.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.2",
    "marge": "^5.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^2.15.1",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "dependencies": {
    "cypress-file-upload": "^5.0.8",
    "cypress-real-events": "^1.7.6",
    "cypress-wait-until": "^1.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cyprus-automation.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cyprus-automation/issues"
  },
  "homepage": "https://github.com/yourusername/cyprus-automation#readme"
}
